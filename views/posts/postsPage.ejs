<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
  </head>
  <body>
    <h1>Posts</h1>
    <a href="/posts/create">Create a Post</a>

    <% if (posts.length === 0) { %>
    <p>No posts yet.</p>
    <% } else { %> <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>
      <small>by <%= post.username %> at <%= post.date %></small>
    </div>
    <% }) %> <% } %>
  </body>
</html>
